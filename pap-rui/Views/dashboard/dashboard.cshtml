@model List<eventos>

<div id="dashboard">
    <div class="container">
       <div class="half">
        <div class="title">Eventos Marcados</div>
        <div class="table">
            <table class="tabela list-section">

                @Html.Partial("/Views/dashboard/eventosList.cshtml", Model)


            </table>
        </div>

        <a href="/AddEventos" title="Adicionar Eventos" class="add-events-btn">
            <i class="fas fa-star"></i>
            <span>Adicionar Eventos</span>
        </a>

        </div>

       <div class="QuemSomos">
           <div class="padding">
               <label for="QuemSomos">Quem Somos:</label><br>
           </div>

           <textarea class="textarea" id="QuemSomos" placeholder="Insira texto aqui"></textarea>

           <div class="button-padding">
               <button class="button" type="submit">Salvar</button>
           </div>
       </div>





        <div class="Academia">
            <div class="padding">
            <label for="Academia">Academia:</label><br>
            </div>
                <textarea class="textarea" id="Academia" placeholder="Insira texto aqui"></textarea>

            <div class="button-padding">
                <button class="button" type="submit">Salvar</button>
            </div>
           </div>

        <div class="Cursos">
            <div class="padding">
                <label for="Cursos">Cursos:</label><br>
            </div>
            <textarea class="textarea" id="Cursos" placeholder="Insira texto aqui"></textarea>


            <div class="button-padding">
                <button class="button" type="submit">Salvar</button>
            </div>
        </div>


        <div class="Contactos">

            <div class="padding">
                <label for="Contactos">Contactos:</label><br>
            </div>
            <textarea class="textarea" id="Contactos" placeholder="Insira texto aqui"></textarea>


            <div class="button-padding">
                <button class="button" type="submit">Salvar</button>
            </div>
        </div>

            </div>
</div>

<script>
    $(document).ready(function () {
        $('.delete-btn').click(function () {
            var id = $(this).data('id');

            $.ajax({
                type: "POST",
                url: "@Url.Action("delete","dashboard")",
                data: { "id": id },
                success: function (response) {
                    $('.list-section').html(response);
                },
                failure: function (response) {

                },
                error: function (response) {

                }
            })
        })
    })
</script>