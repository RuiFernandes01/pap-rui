@model List<eventos>

<div id="dashboard">
    <div class="container">

        <div class="title">Eventos Marcados</div>
        <div class="table">
            <table class="tabela">
                <tr>
                    <th>Titulo</th>
                    <th>Subtitulo</th>

                    <th>Data Inical</th>
                    <th>Data Final</th>
                    <th>Descrição do evento</th>
                    <th>Localização do evento</th>
                </tr>
                    @Html.Partial("/Views/dashboard/eventosList.cshtml", Model)


</table>
        </div>

        <a href="/AddEventos" title="Adicionar Eventos" class="add-events-btn">
            <i class="fas fa-star"></i>
            <span>Adicionar Eventos</span>
        </a>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('.delete-btn').click(function () {
            var id = $(this).data('id');

            $.ajax({
                type: "POST",
                url: "@Url.Action("delete","dashboard")",
                data: { "id": id },
                success: function (response) {
                    $('.list-section').html(response);
                },
                failure: function (response) {

                },
                error: function (response) {

                }
            })
        })
    })
</script>