@model eventos

<div id="addeventos">
    <div class="container">
        @using (Html.BeginForm("adicionarEventos", "AddEventos", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-group">

                <span>Titulo:</span>
                <input type="text" class="form-control" id="titulo-input" name="titulo" title="TituloEvento" placeholder="Insira o titulo do evento">

            </div>

            <div class="form-group">
                <span>Subtitulo:</span>
                <input type="text" class="form-control" id="subtitulo-input" name="subtitulo" title="SubtituloEvento" placeholder="Adicione um subtitulo">
            </div>

            <div class="form-group">
                <span>imagem:</span>
                <input type="file" class="form-control" id="imagem-input" name="imagemFile" value="browse" title="ImagemEvento" placeholder="Adicione uma imagem">
            </div>




            <div class="form-group">
                <span>Data de Inicio:</span>
                <input type="date" class="form-control" id="datai-input" name="datainicio" title="DataInicioEvento" placeholder="Insira a data de inicio">
            </div>

            <div class="form-group">
                <span>Data de Fim:</span>
                <input type="date" class="form-control" id="dataf-input" name="datafim" title="DataFimEvento" placeholder="Inisira a data de fim">
            </div>

            <div class="form-group">
                <span>Descrição:</span>
                <input type="text" class="form-control" id="descricao-input" name="descricao" title="DescricaoEvento" placeholder="Insira a descrição do evento">
            </div>

            <div class="loc-group">
                <div class="lat-group">
                    <span>Latitude:</span>
                    <input type="text" class="form-control" id="latitude-input" name="latitude" title="LatitudeEvento" placeholder="Insira a latitude da localização do evento">
                </div>

                <div class="lon-group">
                    <span>Longitude:</span>
                    <input type="text" class="form-control" id="longitude-input" name="longitude" title="LongitudeEvento" placeholder="Insira a longitude da localização do evento">
                </div>
            </div>

            <button class="button" type="submit">Adicionar Eventos</button>

        }
    </div>
</div>