@model Cursos

<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.16/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.16/dist/summernote-lite.min.js"></script>

<div id="editCursos">
    <div class="container">
        @using (Html.BeginForm("saveCursos", "editCursos", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <input class="d-none" value="@Model.id" name="id" />
            <div class="form-group">
                <span>Titulo:</span>
                <input type="text" class="form-control" id="titulo-input" name="titulo" title="TituloCursos" placeholder="Insira o titulo do curso" value="@Model.titulo">

            </div>

            <div class="form-group">
                <span>Subtitulo:</span>
                <input type="text" class="form-control" id="subtitulo-input" name="subtitulo" title="SubtituloEvento" placeholder="Adicione um subtitulo" value="@Model.subtitulo">
            </div>

            <div class="form-group">
                <span>Duração do Curso:</span>
                <input type="text" class="form-control" id="duracao-input" name="duracao" title="DuraçãoCurso" placeholder="Insira a duração do Curso" required>
            </div>

            <div class="form-group">
                <span>Descrição:</span>
                <div class="summernote">
                    <textarea class="textarea" id="descricao-txt" name="descricao" placeholder="Insira a descrição do curso"></textarea>
                </div>
            </div>

            <button class="button" type="submit">Editar Evento</button>

        }
    </div>
</div>

<script>
    $('#descricao-txt').summernote('pasteHTML', '@Html.Raw(Model.descricao)');
</script>
