<div class="container" id="login-page">
    @using (Html.BeginForm("Login", "LoginPage", FormMethod.Post))
    {




<div class="form-title">Página de Login</div>



    <div class="user-group">
        <div class="user">
            <span>Email:</span>
        </div>
        <input type="text" class="form-control" id="Email" name="Email" title="Insira o email" placeholder="Insira o email">
    </div>
    <div class="pass-group">
        <div class="pass">
            <span>Password:</span>
        </div>
        <input type="password" class="form-control" id="Password" name="Password" title="Insira a sua Password" placeholder="Insira a sua Password" />

    </div>



    <div class="button-group">
        <button type="submit" class="button">Login</button>
    </div>


        }

    
</div>
