<div class="container">
    @using (Html.BeginForm("checkLogin", "Login", FormMethod.Post))
    {
        if (ViewBag.loginFailed != null)
        {
            <div>@ViewBag.loginFailed</div>
        }

        <div class="form-group">
            <span>Email:</span>
            <input type="text" class="form-control" id="email-input" name="emailValue" title="Insira o seu Email" placeholder="Insira o seu Email">
        </div>
        <div>
            <span>Password:</span>
            <input type="password" class="form-control" id="password-input" name="passwordValue" title="Insira a sua Password" placeholder="Insira a sua Password" />
        </div>
        <button type="submit" class="login-btn btn btn-primary">Login</button>


    }
</div>