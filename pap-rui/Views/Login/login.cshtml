<div class="container" id="login-page">
    @using (Html.BeginForm("checkLogin", "Login", FormMethod.Post))
    {
        if (ViewBag.loginFailed != null)
        {
            <div>@ViewBag.loginFailed</div>
        }

        <div class="user-group">
            <div class="user">
                <span>Utilizador:</span>
            </div>
            <input type="text" class="form-control" id="email-input" name="emailValue" title="Insira o nome de Utilizador" placeholder="Insira o nome de Utilizador">
        </div>
        <div class="pass-group">
            <div class="pass">
                <span>Password:</span>
            </div>
            <input type="password" class="form-control" id="password-input" name="passwordValue" title="Insira a sua Password" placeholder="Insira a sua Password" />


       </div>

        <div class="button-group">
            <button type="submit" class="button">Login</button>
        </div>




            }
        </div>
